<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/reoder"
                android:id="@+id/toolbar"
                android:background="@color/yellow"/>
                <View
                    android:id="@+id/topBottomWave"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/yellow"
                    />
                <View
                    android:id="@+id/waveYellow"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/yellow_wave"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/horizontalView"
                android:gravity="center"
                android:padding="10dp"
                android:background="#fcfcfc"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/statementCard"
                    android:layout_width="160dp"
                    android:layout_height="190dp"
                    app:cardElevation="2dp"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/statementLogo"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:background="@drawable/background_purple"
                            android:src="@drawable/account_statement"
                            android:contentDescription="@string/paymentStatement"
                            android:padding="10dp"
                            />
                        <TextView
                            android:id="@+id/statementText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/statement"
                            android:layout_marginTop="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/lightGray"
                            />
                        <TextView
                            android:id="@+id/statementsDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/statementDescription"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/paymentCard"
                    android:layout_width="160dp"
                    android:layout_height="190dp"
                    app:cardElevation="2dp"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/paymentLogo"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:background="@drawable/background_green"
                            android:src="@drawable/white_money"
                            android:contentDescription="@string/paymentStatement"
                            android:padding="10dp"
                            />
                        <TextView
                            android:id="@+id/paymentText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/payment"
                            android:layout_marginTop="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/lightGray"
                            />
                        <TextView
                            android:id="@+id/paymentDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/paymentDescription"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/horizontalView2"
                android:gravity="center"
                android:padding="10dp"
                android:background="#fcfcfc">
                <androidx.cardview.widget.CardView
                    android:id="@+id/suggestionsCard"
                    android:layout_width="160dp"
                    android:layout_height="190dp"
                    app:cardElevation="2dp"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/suggestions"
                            android:layout_width="65dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bright_yellow"
                            android:contentDescription="@string/paymentStatement"
                            android:padding="10dp"
                            android:src="@drawable/communication" />
                        <TextView
                            android:id="@+id/suggestionsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/messaging"
                            android:layout_marginTop="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/lightGray"
                            />
                        <TextView
                            android:id="@+id/suggestionsDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/message"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/servicesCard"
                    android:layout_width="160dp"
                    android:layout_height="190dp"
                    app:cardElevation="2dp"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/servicesLogo"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:background="@drawable/background_accent"
                            android:src="@drawable/housekeeping"
                            android:contentDescription="@string/paymentStatement"
                            android:padding="10dp"
                            />
                        <TextView
                            android:id="@+id/servicesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/services"
                            android:layout_marginTop="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/lightGray"
                            />
                        <TextView
                            android:id="@+id/servicesDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/service"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>